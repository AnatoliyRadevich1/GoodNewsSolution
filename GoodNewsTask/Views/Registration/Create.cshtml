@model User
@section scripts
{
	@*Валидация на стороне клиента осуществляется этими скриптами*@
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<form asp-action="Create" asp-controller="Registration" asp-antiforgery="true">
	<div>
		<label>Введите Login</label> <br/>
		<input type="text" asp-for="Login" />
		<span asp-validation-for="Login"></span> @*Строка для оображения ошибок валидации со стороны сервера*@
	</div>
	<div>
		<label>Введите Password</label><br />
		<input type="password" asp-for="Password" />
		<span asp-validation-for="Password"></span> @*Строка для оображения ошибок валидации со стороны сервера*@
	</div>
	<div>
		<label>Повторите пароль</label><br />
		<input type="password" asp-for="ConfirmPassword" />
		<span asp-validation-for="ConfirmPassword"></span> @*Строка для оображения ошибок валидации со стороны сервера*@
	</div>
	<div>
		<label>Введите E-mail</label><br />
		<input type="email" asp-for="Email" />
		<span asp-validation-for="Email"></span> @*Строка для оображения ошибок валидации со стороны сервера*@
	</div>
	<div>
		<label>Введите уровень позитивности</label><br />
		<input type="number" asp-for="SelectedPositiveLevel" />
		<span asp-validation-for="SelectedPositiveLevel"></span> @*Строка для оображения ошибок валидации со стороны сервера*@
	</div>
	<br />
	<div>
		<input type="submit" value="Зарегистрировать" />
	</div>
</form>
<br />
<p>@ViewBag.SuccessRegistrationMessage</p>
